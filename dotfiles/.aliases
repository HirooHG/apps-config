export ALIASES_PATH="$HOME/apps-config/dotfiles/aliases"

## gen
alias ll="ls -alF --color=auto"
alias la='ls -A'
alias ls="ls --color=auto"
alias l='ls -CF'
alias nv="nvim"
alias adb-change="adb kill-server && sudo adb start-server"
alias fck='thefuck'
alias copy='wl-copy'
alias gnu='ping gnu.org'

# sys
alias pc="sudo pacman"
alias suspend="loginctl suspend"
alias docker="sudo docker"
alias eww="eww -c $EWW"
alias rb="sudo reboot"
alias pw="sudo poweroff"
alias bat="~/.config/hypr/eww/scripts/battery --bat"
alias time-left="~/.config/hypr/eww/scripts/battery --left"
alias ipa="~/.config/hypr/eww/scripts/wifi --ip"
alias ida="~/.config/hypr/eww/scripts/wifi --id"
   

if [[ -r "$ALIASES_PATH/.wifi" ]]; then
  . "$ALIASES_PATH/.wifi"
fi

if [[ -r "$ALIASES_PATH/.git_aliases" ]]; then
  . "$ALIASES_PATH/.git_aliases"
fi

if [[ -r "$ALIASES_PATH/.ssh" ]]; then
  . "$ALIASES_PATH/.ssh"
fi
